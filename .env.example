# Arc Raiders Helper Configuration
# Copy this file to .env and adjust values for your setup

# =============================================================================
# TRIGGER REGION - Where "INVENTORY" text appears
# =============================================================================
# This small region is scanned continuously to detect when inventory is open
TRIGGER_REGION_X=50
TRIGGER_REGION_Y=50
TRIGGER_REGION_WIDTH=200
TRIGGER_REGION_HEIGHT=50

# =============================================================================
# TOOLTIP CAPTURE - Settings for cursor-relative tooltip capture
# =============================================================================
# The tooltip follows your cursor, so we capture an area relative to cursor position
# Width and height of the capture area
TOOLTIP_CAPTURE_WIDTH=500
TOOLTIP_CAPTURE_HEIGHT=400
# Offset from cursor position (where to start capture relative to cursor)
# Positive X = right of cursor, Positive Y = below cursor
TOOLTIP_CAPTURE_OFFSET_X=50
TOOLTIP_CAPTURE_OFFSET_Y=-50

# =============================================================================
# OVERLAY SETTINGS
# =============================================================================
# Where the recommendation overlay appears on screen
OVERLAY_X=100
OVERLAY_Y=100

# How long the overlay stays visible (seconds)
OVERLAY_DISPLAY_TIME=4.0

# =============================================================================
# SCANNING SETTINGS
# =============================================================================
# How often to check for "INVENTORY" text (seconds)
# Lower = more responsive, but more CPU usage
TRIGGER_SCAN_INTERVAL=0.5

# How often to scan tooltip when inventory is open (seconds)
TOOLTIP_SCAN_INTERVAL=0.3

# Minimum time between showing overlays for same item (seconds)
OVERLAY_COOLDOWN=2.0

# =============================================================================
# OCR SETTINGS
# =============================================================================
# Path to Tesseract executable (Windows typically needs this)
# Leave empty to use system PATH
TESSERACT_PATH=

# =============================================================================
# DEBUG SETTINGS
# =============================================================================
# Enable debug mode (saves OCR images, extra logging)
DEBUG_MODE=false

# Directory for debug output
DEBUG_OUTPUT_DIR=./debug
